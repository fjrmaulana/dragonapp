@model Models.UserLogin

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IBS-XAPI-CORE-NAS</title>

    <link href="~/Content/Login.css" type="text/css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/login.js" type="text/javascript"></script>
    <script src="~/Scripts/TweenMax.min.js" type="text/javascript"></script>
</head>
<body>
    <div id="login-button">
        <img src="~/Images/Default/logo.png" alt="Logo Pelindo" />
        <!--
        <img style="text-align: center;display: block;position: absolute;width: 60%; height: 50%" src="~/Images/Default/logo.png" alt="Logo Pelindo" />
        -->
    </div>
        
    <div id="container">
        <h1>Login</h1>
        <span class="close-btn">
            <img src="~/Images/Default/details_close.png" alt="close" />
        </span>

        @using (Html.BeginForm("index", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.TextBoxFor(m => m.UserID, new { Placeholder = "User ID" });
            @Html.PasswordFor(m => m.Password, new { Placeholder = "Password" });
            <input type="submit" value="Login" id="submit" />

            <div id="remember-container">
                <input type="checkbox" id="checkbox-2-1" class="checkbox" checked="checked" />
                <span id="remember">Remember me</span>
                <span id="forgotten">Forgotten password</span>
            </div>
        }

        <div class="login_message"> 
            @if (!string.IsNullOrWhiteSpace(ViewBag.ValidationResult))
            {
                @ViewBag.ValidationResult;

                <script type="text/javascript">
                $('#login-button').fadeOut("slow", function() {
                $("#container").fadeIn();
                    TweenMax.from("#container", .4, { scale: 0, ease: Sine.easeInOut });
                    TweenMax.to("#container", .4, { scale: 1, ease: Sine.easeInOut });
                });
                </script>
            }
        </div>
    </div>

    <!-- Forgot Password Container -->
    <div id="forgotten-container">
        <h1>Forget</h1>
        <span class="close-btn">
            <img src="~/Images/Default/login_close.webp" />
        </span>

        <form>
            <input type="email" name="email" placeholder="E-mail">
            <a href="#" class="forgot-btn">Get password</a>
        </form>
    </div>
        

    <script id="rendered-js">
        $('#login-button').click(function () {
            $('#login-button').fadeOut("slow", function () {
                $("#container").fadeIn();
                TweenMax.from("#container", .4, { scale: 0, ease: Sine.easeInOut });
                TweenMax.to("#container", .4, { scale: 1, ease: Sine.easeInOut });
            });
        });

        $(".close-btn").click(function () {
            TweenMax.from("#container", .4, { scale: 1, ease: Sine.easeInOut });
            TweenMax.to("#container", .4, { left: "0px", scale: 0, ease: Sine.easeInOut });
            $("#container, #forgotten-container").fadeOut(800, function () {
                $("#login-button").fadeIn(800);
            });
        });

        /* Forgot Password */
        $('#forgotten').click(function () {
            $("#container").fadeOut(function () {
                $("#forgotten-container").fadeIn();
            });
        });
    </script>
</body>
</html>
